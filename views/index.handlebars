<div>
	<div class='col-md-12'>
		<div id="makeBurger">
			<form class="form-inline text-center" method='POST' action='/create'>
				<div class="form-group">
					<label for="burgerName">Burger Name</label>
					<input type="text" class="form-control" name='burgerName' id="burgerName" placeholder="NomNom">
				</div>
				<button type="submit" class="btn btn-default">Make-Da-Burger</button>
			</form>
		</div>
	</div>
</div>

<div class='row'>

	<div class='col-md-6'>
		<div class="burgers text-center">
			<h2>Available Burgers</h2>
			{{#each new}}
				<div class='burgerDivs'>
					<form method="POST" action="/devoured/{{id}}">
						<p>{{burgerName}}</p>
						<input type="hidden" name="id" value="{{id}}">
						<button type='submit'>Devour</button>
					</form>
				</div>
			{{/each}}
		</div>
	</div>

	<div class='col-md-6'>
		<div class="burgers text-center">
			<h2>Devoured Burgers</h2>
			{{#each devoured}}
				<div class='burgerDivs'>
					<p>{{burgerName}}</p>
				</div>
			{{/each}}
		</div>
	</div>

</div>

